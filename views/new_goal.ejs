<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <title>Add New Goal</title>
  <link rel="stylesheet" href="/css/styles_goals.css">
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/workouts">Training</a></li>
        <li><a href="/goals" class="active">Goals</a></li>
        <li><a href="/records">Records</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <h2>New Goal</h2>
    <% if (errors.length > 0) { %>
      <ul class="errors">
        <% errors.forEach(function(error){ %>
          <li><%= error.msg %></li>
        <% }); %>
      </ul>
    <% } %>
    <form action="/goals" method="POST">
      <label for="date">Date:</label>
      <input type="date" name="date" id="date" value="<%= data.date || '' %>" required>
      <br>
      <label for="exercise">Exercise:</label>
      <select name="exercise" id="exercise" required>
        <option value="">-- Select Exercise --</option>
        <option value="Weightlifting" <%= data.exercise === "Weightlifting" ? "selected" : "" %>>Weightlifting</option>
        <option value="Running" <%= data.exercise === "Running" ? "selected" : "" %>>Running</option>
        <option value="Cycling" <%= data.exercise === "Cycling" ? "selected" : "" %>>Cycling</option>
        <option value="Swimming" <%= data.exercise === "Swimming" ? "selected" : "" %>>Swimming</option>
      </select>
      <br>
      <label for="exerciseType">Exercise Type:</label>
      <select name="exerciseType" id="exerciseType" required>
        <option value="">-- Select Type --</option>
      </select>
      <br>
      <label for="goal">Goal:</label>
      <input type="text" name="goal" id="goal" value="<%= data.goal || '' %>" required>
      <br>
      <button type="submit">Add Goal</button>
    </form>
    <a href="/goals">Back to Goals</a>
    <script src="/js/exerciseTypes.js"></script>
  </main>
</body>
</html>