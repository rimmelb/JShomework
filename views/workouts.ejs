<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Training</title>
  <link rel="stylesheet" href="/css/styles_workouts.css">
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/workouts" class="active">Training</a></li>
        <li><a href="/goals">Goals</a></li>
        <li><a href="/records">Records</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <section class="trainings">
      <div class="trainings-header">
        <h2>Training</h2>
        <button class="add-training" onclick="window.location.href='/workouts/new'">Add Training</button>
      </div>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>DAY</th>
            <th>EXERCISE</th>
            <th>EXERCISE TYPE</th>
            <th>GOAL</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% workouts.forEach(workout => { %>
            <tr>
              <td><span class="toggle-icon">â–¶</span></td>
              <td><%= workout.date.toISOString().split('T')[0] %></td>
              <td></td>
              <td></td>
              <td></td>
              <td>
                <div class="actions">
                  <button class="modify" onclick="window.location.href='/workouts/<%= workout._id %>/edit'">Modify</button>
                  <form action="/workouts/<%= workout._id %>/delete" method="POST" style="display:inline;">
                    <button type="submit" onclick="return confirm('Are you sure?');" class="delete">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
            <% workout.exercises.forEach(ex => { %>
              <tr class="hidden-row">
                <td></td>
                <td></td>
                <td><%= ex.exercise %></td>
                <td><%= ex.exerciseType %></td>
                <td><%= ex.goal %></td>
                <td></td>
              </tr>
            <% }); %>
          <% }); %>
        </tbody>
      </table>
    </section>
  </main>
  <script src="/js/toggleRows.js"></script>
</body>
</html>