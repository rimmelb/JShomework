<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Goal</title>
  <link rel="stylesheet" href="/styles_goals.css">
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/workouts">Training</a></li>
        <li><a href="/goals" class="active">Goals</a></li>
        <li><a href="/records">Records</a></li>
      </ul>
    </nav>
  </header>
  
  <main>
    <h2>Edit Goal</h2>
    <form action="/goals/<%= goal.id %>/edit" method="POST">
      <label for="date">Date:</label>
      <input type="date" id="date" name="date" value="<%= goal.date %>" required>
      
      <label for="exercise">Exercise:</label>
      <select id="exercise" name="exercise" required>
        <option value="">-- Select an exercise --</option>
        <option value="Weightlifting" <%= goal.exercise === "Weightlifting" ? "selected" : "" %>>Weightlifting</option>
        <option value="Running" <%= goal.exercise === "Running" ? "selected" : "" %>>Running</option>
        <option value="Cycling" <%= goal.exercise === "Cycling" ? "selected" : "" %>>Cycling</option>
        <option value="Swimming" <%= goal.exercise === "Swimming" ? "selected" : "" %>>Swimming</option>
      </select>
      
      <label for="exerciseType">Exercise Type:</label>
      <select id="exerciseType" name="exerciseType" required>
        <option value="">-- Select a type --</option>
      </select>
      
      <label for="goal">Goal:</label>
      <input type="text" id="goal" name="goal" value="<%= goal.goal %>" required>
      
      <button type="submit">Save</button>
    </form>
    <a href="/goals">Back to Goals Page</a>
    
    <!-- Inline script for dynamically populating exercise types -->
    <script>
      function updateExerciseTypes() {
        var exerciseSelect = document.getElementById('exercise');
        var exerciseTypeSelect = document.getElementById('exerciseType');
        var exerciseTypes = {
          "Weightlifting": ["Bench Press", "Squat", "Deadlift", "Shoulder Press"],
          "Running": ["Distance", "Average Speed", "Time"],
          "Cycling": ["Distance", "Average Speed", "Time"],
          "Swimming": ["Freestyle", "Backstroke", "Breaststroke", "Butterfly", "Individual Medley"]
        };
        // Set default option
        exerciseTypeSelect.innerHTML = '<option value="">-- Select a type --</option>';
        var selected = exerciseSelect.value;
        if (exerciseTypes[selected]) {
          exerciseTypes[selected].forEach(function(type) {
            var option = document.createElement("option");
            option.value = type;
            option.textContent = type;
            exerciseTypeSelect.appendChild(option);
          });
        }
        // If a previously saved value exists, set it
        var initialType = "<%= goal.exerciseType %>";
        if (initialType) {
          exerciseTypeSelect.value = initialType;
        }
      }
      
      document.getElementById('exercise').addEventListener('change', updateExerciseTypes);
      document.addEventListener("DOMContentLoaded", updateExerciseTypes);
    </script>
  </main>
</body>
</html>