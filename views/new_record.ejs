<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Record</title>
  <link rel="stylesheet" href="/styles_records.css">
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/workouts">Training</a></li>
        <li><a href="/goals">Goals</a></li>
        <li><a href="/records" class="active">Records</a></li>
      </ul>
    </nav>
  </header>
  
  <main>
    <h2>Add Record</h2>
    <form action="/records" method="POST">
      <label for="date">Date:</label>
      <input type="date" id="date" name="date" required>
      <br>
      <label for="exercise">Exercise:</label>
      <select id="exercise" name="exercise" required>
        <option value="">-- Select an exercise --</option>
        <option value="Weightlifting">Weightlifting</option>
        <option value="Running">Running</option>
        <option value="Cycling">Cycling</option>
        <option value="Swimming">Swimming</option>
      </select>
      <br>
      <label for="exerciseType">Exercise Type:</label>
      <select id="exerciseType" name="exerciseType" required>
        <option value="">-- Select a type --</option>
      </select>
      <br>
      <label for="record">Record:</label>
      <input type="text" id="record" name="record" required>
      <br>
      <button type="submit">Save</button>
    </form>
    <a href="/records">Back to Records Page</a>
    
    <!-- Inline JavaScript for dynamically populating exercise types -->
    <script>
      function updateExerciseTypes() {
        var exerciseSelect = document.getElementById('exercise');
        var exerciseTypeSelect = document.getElementById('exerciseType');
        var exerciseTypes = {
          "Weightlifting": ["Bench Press", "Squat", "Deadlift", "Shoulder Press"],
          "Running": ["Distance", "Average Speed", "Time"],
          "Cycling": ["Distance", "Average Speed", "Time"],
          "Swimming": ["Freestyle", "Backstroke", "Breaststroke", "Butterfly", "Individual Medley"]
        };
        // Set default option
        exerciseTypeSelect.innerHTML = '<option value="">-- Select a type --</option>';
        var selected = exerciseSelect.value;
        if (exerciseTypes[selected]) {
          exerciseTypes[selected].forEach(function(type) {
            var option = document.createElement("option");
            option.value = type;
            option.textContent = type;
            exerciseTypeSelect.appendChild(option);
          });
        }
      }
      
      // Add event listener to the "Exercise" select element
      document.getElementById('exercise').addEventListener('change', updateExerciseTypes);
      document.addEventListener('DOMContentLoaded', updateExerciseTypes);
    </script>
  </main>
</body>
</html>