<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <title>Add Record</title>
  <link rel="stylesheet" href="/css/styles_records.css">
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/workouts">Training</a></li>
        <li><a href="/goals">Goals</a></li>
        <li><a href="/records" class="active">Records</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <h2>Add Record</h2>
    <% if (errors.length > 0) { %>
      <ul class="errors">
        <% errors.forEach(function(error) { %>
          <li><%= error.msg %></li>
        <% }); %>
      </ul>
    <% } %>
    <form action="/records" method="POST">
      <label for="date">Date:</label>
      <input type="date" id="date" name="date" value="<%= data.date ? data.date : '' %>" required>
      <br>
      <label for="exercise">Exercise:</label>
      <select id="exercise" name="exercise" required>
        <option value="">-- Select an exercise --</option>
        <option value="Weightlifting" <%= data.exercise === "Weightlifting" ? "selected" : "" %>>Weightlifting</option>
        <option value="Running" <%= data.exercise === "Running" ? "selected" : "" %>>Running</option>
        <option value="Cycling" <%= data.exercise === "Cycling" ? "selected" : "" %>>Cycling</option>
        <option value="Swimming" <%= data.exercise === "Swimming" ? "selected" : "" %>>Swimming</option>
      </select>
      <br>
      <label for="exerciseType">Exercise Type:</label>
      <select id="exerciseType" name="exerciseType" required>
        <option value="">-- Select a type --</option>
      </select>
      <br>
      <label for="record">Record:</label>
      <input type="text" id="record" name="record" value="<%= data.record ? data.record : '' %>" required>
      <br>
      <button type="submit" class="modify">Save</button>
    </form>
    <a href="/records">Back to Records Page</a>
    <script src="/js/exerciseTypes.js"></script>
  </main>
</body>
</html>
