<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="stylesheet" href="/css/styles_index.css">
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/" class="active">Home</a></li>
        <li><a href="/workouts">Training</a></li>
        <li><a href="/goals">Goals</a></li>
        <li><a href="/records">Records</a></li>
      </ul>
    </nav>
  </header>
  
  <main>
    <section class="training">
      <h2>Today's Training</h2>
      <div id="trainingContainer">
        <% if (todaysWorkouts.length > 0) { %>
          <table id="trainingTable">
            <thead>
              <tr>
                <th>Exercise</th>
                <th>Type of Exercise</th>
                <th>Goal</th>
              </tr>
            </thead>
            <tbody>
              <% todaysWorkouts.forEach(function(workout) { %>
                <% workout.exercises.forEach(function(ex) { %>
                  <tr>
                    <td><%= ex.exercise %></td>
                    <td><%= ex.exerciseType %></td>
                    <td><%= ex.goal %></td>
                  </tr>
                <% }); %>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <p id="noTrainingMsg">Nincs ma rögzített training.</p>
        <% } %>
      </div>
    </section>
    
    <!-- stats szekció -->
    <!-- stats szekció az index.ejs-ben -->
    <section class="stats">
      <div class="stat">
        <h3>Goals achieved</h3>
        <div class="circle" style="background: conic-gradient(#99ff66 0% <%= goalsAchieved %>%, #f2f2f2 <%= goalsAchieved %>% 100%);">
          <span><%= goalsAchieved %>%</span>
        </div>                
      </div>
      <div class="stat">
        <h3>Trainings done</h3>
        <div class="circle" style="background: conic-gradient(#99ff66 0% <%= trainingsDone  %>%, #f2f2f2 <%= trainingsDone %>% 100%);">
          <span><%= trainingsDone %>%</span>
        </div>                
      </div>
    </section>
  </main>
  
  <script>src="/js/todaysTrainingHandler.js"</script>
</body>
</html>